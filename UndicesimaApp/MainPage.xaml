<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndicesimaApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30"
            VerticalOptions="Start">

            <Label
                Text="Benvenuto! Usa uno degli strumenti in cassetta degli attrezzi!"
                HorizontalOptions="Center" />

            <Button 
                x:Name="btnGPS" 
                Text="GPS" Clicked="btnGPS_Clicked"  />

            <Button 
                x:Name="btnBussola" 
                Text="Bussola" 
                Clicked="btnBussola_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
